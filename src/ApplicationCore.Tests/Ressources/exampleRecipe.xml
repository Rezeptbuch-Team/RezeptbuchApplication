<?xml version="1.0" encoding="UTF-8"?>
<recipe>
    <hash>abc123</hash>
    <title>Tomato Pasta</title>
    <imageName>tomato_pasta.jpg</imageName>
    <description>Delicious and simple tomato pasta recipe.</description>
    <servings>2</servings>
    <cookingTime>20</cookingTime>
    <categories>
        <category>Vegetarian</category>
        <category>Pasta</category>
    </categories>
    <instructions>
        <instruction>
            Boil water in a large pot.
            <ingredient name="water" amount="600" unit="ml"/>
        </instruction>
        <instruction>
            Add pasta and cook until al dente.
            <ingredient name="pasta" amount="200" unit="g"/>
        </instruction>
        <instruction>
            In a separate pan, heat olive oil and add garlic.
            <ingredient name="olive oil" amount="2" unit="tablespoons"/>
            <ingredient name="garlic" amount="2" unit="cloves"/>
        </instruction>
        <instruction>
            Add chopped tomatoes and cook for 10 minutes.
            <ingredient name="tomatoes" amount="400" unit="g"/>
        </instruction>
        <instruction>
            Mix sauce with pasta and serve.
        </instruction>
    </instructions>
</recipe>
